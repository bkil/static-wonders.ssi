<IfModule mod_headers.c>
  Header always set X-Robots-Tag "noindex"
  Header always set X-XSS-Protection: "1; mode=block"
  Header always set X-Content-Type-Options "nosniff"

#  Header always set Content-Security-Policy "sandbox allow-forms; base-uri 'none'; default-src 'none'; frame-src 'self'; style-src 'unsafe-inline'; form-action 'self'; frame-ancestors *; navigate-to https://gitlab.com;"
</IfModule>

<IfModule mod_include.c>
  AddType text/html .shtml
  AddOutputFilter INCLUDES;DEFLATE .shtml
  Options +Includes -Indexes
  AddHandler server-parsed .shtml
  XBitHack on
  SSILegacyExprParser on
</IfModule>

<IfModule mod_rewrite.c>
  RewriteEngine on
  RewriteBase /

  RewriteCond %{REQUEST_URI} /(\.htaccess|README\.md)$
  RewriteRule ^ - [L,F]
</IfModule>
